{
  "component": "Button",
  "mui_component": "Button",
  "modus_component": "modus-wc-button",
  "property_mappings": {
    "children": {
      "modus_prop": "slot",
      "type": "slot",
      "transformation": "direct",
      "notes": "Content goes into default slot"
    },
    "color": {
      "modus_prop": "color",
      "type": "enum",
      "transformation": "map",
      "mapping": {
        "primary": "primary",
        "secondary": "secondary",
        "success": "primary",
        "error": "danger",
        "info": "primary",
        "warning": "warning",
        "inherit": "secondary"
      },
      "notes": "Limited color options in Modus, some MUI colors map to closest equivalent"
    },
    "disabled": {
      "modus_prop": "disabled",
      "type": "boolean",
      "transformation": "direct"
    },
    "disableElevation": {
      "modus_prop": null,
      "type": "boolean",
      "transformation": "css",
      "notes": "Handle with CSS custom class"
    },
    "disableFocusRipple": {
      "modus_prop": null,
      "type": "boolean",
      "transformation": "not_supported",
      "notes": "Modus doesn't have ripple effects"
    },
    "disableRipple": {
      "modus_prop": null,
      "type": "boolean",
      "transformation": "not_supported",
      "notes": "Modus doesn't have ripple effects"
    },
    "endIcon": {
      "modus_prop": "slot",
      "type": "element",
      "transformation": "slot",
      "notes": "Add modus-wc-icon after text content"
    },
    "fullWidth": {
      "modus_prop": "full-width",
      "type": "boolean",
      "transformation": "direct"
    },
    "href": {
      "modus_prop": null,
      "type": "string",
      "transformation": "wrapper",
      "notes": "Wrap button in anchor tag or use custom handling"
    },
    "size": {
      "modus_prop": "size",
      "type": "enum",
      "transformation": "map",
      "mapping": {
        "small": "sm",
        "medium": "md",
        "large": "lg"
      }
    },
    "startIcon": {
      "modus_prop": "slot",
      "type": "element",
      "transformation": "slot",
      "notes": "Add modus-wc-icon before text content"
    },
    "variant": {
      "modus_prop": "variant",
      "type": "enum",
      "transformation": "map",
      "mapping": {
        "text": "borderless",
        "outlined": "outlined",
        "contained": "filled"
      }
    },
    "onClick": {
      "modus_prop": "buttonClick",
      "type": "event",
      "transformation": "rename_event"
    },
    "sx": {
      "modus_prop": "custom-class",
      "type": "object",
      "transformation": "css",
      "notes": "Convert sx prop to CSS classes"
    }
  },
  "additional_modus_props": {
    "shape": {
      "default": "rectangle",
      "options": ["circle", "rectangle", "square"],
      "notes": "Set based on use case, IconButton would use circle"
    },
    "pressed": {
      "default": false,
      "notes": "Toggle button state, not directly available in MUI Button"
    },
    "type": {
      "default": "button",
      "notes": "HTML button type attribute"
    }
  },
  "migration_examples": [
    {
      "mui": "<Button variant=\"contained\" color=\"primary\" size=\"large\">Click Me</Button>",
      "modus": "<modus-wc-button variant=\"filled\" color=\"primary\" size=\"lg\">Click Me</modus-wc-button>"
    },
    {
      "mui": "<Button variant=\"outlined\" startIcon={<DeleteIcon />}>Delete</Button>",
      "modus": "<modus-wc-button variant=\"outlined\"><modus-wc-icon name=\"delete\"></modus-wc-icon>Delete</modus-wc-button>"
    },
    {
      "mui": "<IconButton color=\"primary\"><DeleteIcon /></IconButton>",
      "modus": "<modus-wc-button shape=\"circle\" color=\"primary\"><modus-wc-icon name=\"delete\"></modus-wc-icon></modus-wc-button>"
    }
  ]
}
